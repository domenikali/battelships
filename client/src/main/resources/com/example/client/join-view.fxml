<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="CENTER_RIGHT" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.client.ClientController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="test" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

  <VBox alignment="CENTER_LEFT" spacing="20.0" GridPane.rowIndex="1" GridPane.columnIndex="0">
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="label"/>
    <TextField fx:id="userText"/>
    <Button text="Join lobby!" onAction="#onJoinButtonClick"/>
  </VBox>

</GridPane>
